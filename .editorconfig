# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{go, conf, json}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
single_quote=false


[*.{yaml, yml}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
single_quote=false

[Makefile]
indent_style = tab


[Dockerfile]
indent_style = space
indent_size = 2